/* pages/mine/mine.wxss */
page {
  background-color: #f5f5f5;
}
.mine-top{
  background-image: url("https://chy-vending-1253882812.cos.ap-guangzhou.myqcloud.com/Chy.CarWash/images/my_top_bg2.png");
  background-repeat: no-repeat;
  background-size: 100%;
  height: 280rpx;
} 
.mine-user{
  display: flex;
  padding: 30rpx;
  color: #fff;
  height: 100rpx;
  align-items: center;
}
.mine-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 0;
}
.mine-user-info{
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
}
.mine-user-info view{
  width: 100%;
}
.mine-user-name{
  font-size: 36rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.mine-user-phone{
  font-size: 26rpx;
}
.mine-user-number{
  font-size: 24rpx;
}
.mine-balance{
  padding: 0 30rpx;
  display: flex;
  justify-content: space-around;
}
.mine-balance-box{
  text-align: center;
}
.mine-balance-value{
  color: #ffe400;
  font-size: 40rpx;
}
.mine-balance-name{
  font-size: 28rpx;
  color: #fff;
}
.mine-operating{
  background-color: #fff;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-around;
  border-bottom: 15rpx solid #f5f5f5;
}
.mine-operating-box{
  text-align: center;
  width: 33.33%;
  border-left: 1px solid #cccccc;
}
.mine-operating-box:first-of-type{
  border-left-width: 0;
}
.mine-operating-image{
  width: 48rpx;
  height: 54rpx;
}
.mine-operating-name{
  color: #2b2b2b;
  font-size: 30rpx;
}

.van-cell__left-icon-wrap {
  height: 18px !important;
}
.mine-mt-15{
  margin-top: 15rpx;
}
.mine-checkbox{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 70rpx;
  font-size: 24rpx;
}
.popup-title{
  font-size: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 80rpx;
}
.mine-protocol{
  color: #0099ff;
}
.popup-navigator{
  padding-left: 10rpx;
}
.van-cell__value{
  flex: 2 !important;
}