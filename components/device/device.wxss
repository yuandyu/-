/* components/device/device.wxss */

.device-box {
  padding: 25rpx 20rpx;
}

.device-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
  height: 166rpx;
}

.device-image {
  width: 100rpx;
  height: 90rpx;
  margin-left: 26rpx;
}

.device-left2 {
  width: 80%;
  display: flex;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
  border: 1px solid #e6e6e6;
  border-radius: 30rpx;
  border-right-width: 0;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
  box-shadow: 0 0 8px #e6e6e6;
  -moz-box-shadow: 0 0 8px #e6e6e6;
  -webkit-box-shadow: 0 0 8px #e6e6e6;
}

.device-left {
  display: flex;
  /* align-items: center; */
  align-content: space-between;
  height: 88rpx;
}

.device-name {
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
  padding-left: 20rpx;
}

.device-number {
  font-size: 28rpx;
  color: #2b2b2b;
  width: 100%;
}

.device-status-text {
  font-size: 24rpx;
  color: #2b2b2b;
  padding-right: 10rpx;
}

.device-status-box {
  display: flex;
  align-items: center;
  width: 100%;
}

.device-status {
  color: #fff;
  background-color: #00a0e9;
  height: 30rpx;
  width: 90rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 18rpx;
  border-radius: 15rpx;
}

.device-right {
  width: 20%;
  height: 100%;
  color: #fff;
  align-items: center;
  justify-items: center;
  justify-content: center;
  display: flex;
  background: #00a0e9;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.device_null{
  text-align: center;
  padding-top: 30rpx;
}